
  <div class="row justify-content-center bg-light">
    <div class="col-md-8">
      <h1 class="black-header">Add a new cocktail</h1>
    <div class="d-flex justify-content-center">
      <div class="form-group w-50">
        <%= simple_form_for @cocktail do |f| %>
          <%= f.input :name, label: 'Name', class: 'form-control' %>
          <%= f.input :photo, as: :file %>
          <%= f.button :submit, class: 'btn btn-outline-primary mb-3 w-100' %>
        <% end %>
      <%= link_to "Go back", cocktails_path, class: "btn btn-outline-warning w-100" %>
    </div>    
