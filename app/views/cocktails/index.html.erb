<%= render 'components/banner' %>

<div class="container text-center">
  <h3 class="index-black">All your banging cocktails</h3>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
         url('<%= image_path 'carolina.jpg' %>'), height: 300, width: 400, crop: :fill %>')">
          
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
          <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

