<div class="bg-light">
  <div class="container p-3">
    <h3 class="main-title"><%= @cocktail.name %></h3>
    <br>
    <div class="row">
      <div class="col-sm-12 col-md-6">
        <h3 class="title">Recipe</h3>
        <table class="table table-bordered">
          <tbody>
            <thead>
              <th>Ingredient</th>
              <th>Description</th>
              <th>Action</th>
            </thead>
            <% @cocktail.doses.each do |dose| %>
              <tr>
                <td><%= dose.ingredient.name %></td>
                <td><%= dose.description %></td>
                <td>
                  <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                    <i class="fa fa-trash destroy_dose"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-md-6">
        <img src="https://f.roocdn.com/images/menus/70997/header-image.jpg?width=800&height=600&auto=webp&format=jpg&fit=crop&v=1531393618" alt="" class="w-100 rounded">
    </div>
  </div>
    <%= link_to "Delete Cocktail", cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-outline-warning' %>
    <%= link_to "Home", root_path ,class: 'btn btn-outline-primary' %>
</div>